<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :customer_id %><br />
    <%= f.select :customer_id, @customers, :prompt=>"Select..." %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>