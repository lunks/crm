<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, Task::STATUS %>
  </p>
  <p>
    <%= f.label :owner_id, "Owner" %><br />
    <%= f.select :owner_id, @owners  %>
  </p>
  <p>
    <%= f.label :priority_id, "Priority" %><br />
    <%= f.select :priority, Task::PRIORITY %>
  </p>
  <p>
    <%= f.label :progress %><br />
    <%= f.select :progress, percentage_options_for_select %>
  </p>
  <p>
    <%= f.label :started_at %><br />
    <%= f.date_select :started_at, :order => [:day, :month, :year], :prompt=>true %>
  </p>
  <p>
    <%= f.label :ended_at %><br />
    <%= f.date_select :ended_at, :order => [:day, :month, :year], :prompt=>true %>
  </p>
  <p>
    <%= f.label :project_id, "Project" %><br />
    <%= f.select :project_id, @projects %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>