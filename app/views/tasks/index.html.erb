<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Owner</th>
    <th>Priority</th>
    <th>Progress</th>
    <th>Started at</th>
    <th>Ended at</th>
    <th>Project</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.description %></td>
    <td><%=h task.status %></td>
    <td><%=h task.owner %></td>
    <td><%=h task.priority %></td>
    <td><%=h task.progress %></td>
    <td><%=h task.started_at %></td>
    <td><%=h task.ended_at %></td>
    <td><%=h task.project %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

