<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone_country_code, :size => 3 %> 
    <%= f.text_field :phone_area_code, :size => 3 %> 
    <%= f.text_field :phone_number, :size => 10 %> 
  </p>
  <p>
    <%= f.label :rating, "Rating" %><br />
    <%= f.select :rating, "1".."5" %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>